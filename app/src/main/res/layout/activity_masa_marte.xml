<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MasaMarte">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

    <TextView
            android:text="Calculadora de masa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/marte"
            android:id="@+id/imageView"
            android:layout_marginTop="25dp"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

        <TextView
                android:text="Tu peso en marte es"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"/>

        <TextView
                android:id="@+id/txv_pesoMarte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/btn_JupiterMarte"
            android:text="Jupiter"
            android:textColor="@android:color/white"
            android:background="@drawable/boton_redondo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:onClick="btn_JupiterMarte"/>
    <Button
            android:id="@+id/btn_regresarMarte"
            android:text="Regresar"
            android:textColor="@android:color/white"
            android:background="@drawable/boton_redondo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:onClick="btn_Regresar"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</ScrollView>